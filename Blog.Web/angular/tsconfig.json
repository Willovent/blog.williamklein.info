{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "@bw/services" : ["./app/services"],
      "@bw/components" : ["./app/components"],
      "@bw/shared/components" : ["./app/modules/shared/components"],
      "@bw/models" : ["./app/models"],
      "@bw/containers" : ["./app/containers"],
    },
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
