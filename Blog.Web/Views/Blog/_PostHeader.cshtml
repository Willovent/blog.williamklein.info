@using System.Threading.Tasks
@using Microsoft.AspNet.Http

@model Blog.Data.Post

@{
    var postUrl = Url.Action("Post", "Blog", new { categoryCode = Model.Category.Code, postUrl = Model.Url }, this.Context.Request.IsHttps ? "https" : "http");
}

<div class="postheader @Model.Category.Code">
    <a href="@postUrl" rel="bookmark">
    <h1>@Model.Title</h1>
    <div class='postdate'>Publi&eacute; le @Model.PublicationDate.Value.ToString("dd MMMM yyyy")</div>
    </a>
</div>